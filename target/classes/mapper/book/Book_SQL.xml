	<insert id="insertBook" parameterType="hashmap">
		<![CDATA[
			INSERT INTO BOOK
			(
				BOOK_NO, 
				COUNT, 
				DEP_CODE, 
				ARR_CODE, 
				PAY, 
				PRICE, 
				NAME, 
				EMAIL, 
				PHONE, 
				DAY, 
				MEM_NO)
			VALUES
			(
				#{BOOK_NO},
				#{COUNT},
				#{DEP_CODE},
				#{ARR_CODE},
				#{PAY},
				#{PRICE},
				#{NAME},
				#{EMAIL},
				#{PHONE},
				#{DAY},
				#{MEM_NO}
			)
		]]>
	</insert>
	
